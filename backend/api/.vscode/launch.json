    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": false,
            "console":"integratedTerminal"
        },
        {
            "name": "Migrate latest",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}\\node_modules\\knex\\bin\\cli",
            "stopOnEntry": false,
            "args": ["migrate:latest", "--env", "production"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "production"
            },
            "sourceMaps": false
        }
    ]
}